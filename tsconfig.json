{
    "compilerOptions": {
        "declaration": true,
        "baseUrl": ".",
        "rootDir": "./",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es6",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true
    },
    "ts-node": {
        "files": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
